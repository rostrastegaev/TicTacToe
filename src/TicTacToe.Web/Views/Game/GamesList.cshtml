@model bool

<div class="games-list">
    <table class="table" style="display: none;">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Started At</th>
                <th scope="col">Ended At</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
    @if (Model)
    {
        <div class="row">
            <div class="col-2">
                <a class="game-list__back" href="/">Back</a>
            </div>
            <div class="col-10">
                <ul class="pagination" style="display: none;">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="First">
                            <span>&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span>&lsaquo;</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span>&rsaquo;</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Last">
                            <span>&raquo;</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    }
    else
    {
        <ul class="pagination" style="display: none;">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="First">
                    <span>&laquo;</span>
                </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span>&lsaquo;</span>
                </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span>&rsaquo;</span>
                </a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Last">
                    <span>&raquo;</span>
                </a>
            </li>
        </ul>
    }
</div>